{
  "name": "cnastasi/serializer",
  "description": "A experimental serializer using php 7.4 typed properties and reflection",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "Christian Nastasi",
      "email": "christian.nastasi@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.4",
    "phpstan/phpstan": "^0.12",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "CNastasi\\Serializer\\": "src/",
      "CNastasi\\Example\\": "example/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CNastasi\\Serializer\\": "tests/"
    }
  },
  "scripts": {
    "test": "docker run vendor/bin/phpunit",
    "test-with-coverage": "vendor/bin/phpunit --coverage-text --coverage-clover build/logs/clover.xml"
  }
}
